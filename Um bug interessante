#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <SDL.h>
#include <SDL_image.h>

// Chama todas as funções init necessárias
void init()
{
	SDL_Init(SDL_INIT_VIDEO);
	IMG_Init(IMG_INIT_PNG);
}

// Chama todas as funções quit necessárias
void quit()
{
	IMG_Quit();
	SDL_Quit();
}


// Função que carrega e otimiza uma imagem em variáveis do tipo SDL_surface
SDL_Surface* load_image(const char* image_Path, SDL_Surface* main_Surface)
{
	SDL_Surface* loaded_Surface = NULL;
	SDL_Surface* optimized_Surface = NULL;

	//loaded_Surface = SDL_LoadBMP(image_Path);
	loaded_Surface = IMG_Load(image_Path);

	if (loaded_Surface == NULL) // Se NULL, então não ocorreu o load surface
	{
		printf("Erro ao carregar a imagem! \n Imagem: %s \n	SDL_GetError: %s", image_Path, SDL_GetError());
	}
	else
	{
		optimized_Surface = SDL_ConvertSurface(loaded_Surface, main_Surface->format, 0); // Converte a surface de 24bit para 32bit

		if (optimized_Surface == NULL) // Se NULL, então não ocorreu o convert surface
		{
			printf("Erro ao otimizar imagem! \n Imagem: %s \n SDL_GetError: %s", image_Path, SDL_GetError());
		}

		SDL_FreeSurface(loaded_Surface); // Libera da memória a LoadedSurface
	}
	return optimized_Surface;
}


// Função que carrega uma surface e cria uma textura dessa surface
SDL_Texture* load_texture(const char* image_Path, SDL_Renderer* window_Renderer)
{
	SDL_Texture* new_Texture = NULL;
	SDL_Surface* loaded_Surface = NULL;

	loaded_Surface = IMG_Load(image_Path);

	new_Texture = SDL_CreateTextureFromSurface(window_Renderer, loaded_Surface);

	SDL_FreeSurface(loaded_Surface);

	return new_Texture;
}

	

int main(int argc, char* argv[])
{
	// y62Kqx <- Alguma informação do professor que eu ñ lembro o que era

	init(); // Função que chama todas as funções init (escrita no topo desse códico)


	//  =-= =-= =-= =-= =-=   Variáveis   =-= =-= =-= =-=  //

	//  =-= Variáveis de configuração =-=  //

	int window_Width = 800;  // 1536x864 ou 1920x1080
	int window_Height = 600;

	int detetive_Width = 96 * 1;
	int detetive_Height = 96 * 1;

	bool game_loop = true; // Variável que so fica falsa quando um evento finalizar o jogo
	int sprite = 1; // Número do sprite do detetive que vai ser mostrado

	SDL_Event event; // Variável que vai conter eventos (qualquer input) do usuário
	
	//  =-=   Fim das variáveis de configuração   =-=  //
	//  =-----------------------------------------------=  //
	//  =-=   Variáveis da window e de renderização   =-=  //
	
	// Criação da janela (main_Window) e de sua surface (main_Surface)
	//                                    Título       Ponto incial x          Ponto inicial y         Largura       Altura              FLAG
	SDL_Window* main_Window = SDL_CreateWindow("Jogo", SDL_WINDOWPOS_UNDEFINED, SDL_WINDOWPOS_UNDEFINED, window_Width, window_Height, SDL_WINDOW_SHOWN);
	SDL_Surface* main_Surface = SDL_GetWindowSurface(main_Window);

	SDL_Renderer* window_Renderer = SDL_CreateRenderer(main_Window, -1, SDL_RENDERER_ACCELERATED);
	SDL_SetRenderDrawColor(window_Renderer, 0xFF, 0xFF, 0xFF, 0xFF);

	SDL_Rect main_Rect;
	main_Rect.x = 0;
	main_Rect.y = 0;
	main_Rect.w = window_Width;
	main_Rect.h = window_Height;

	//  =-=   Fim das variáveis da Window   =-=  //
	//  =-----------------------------------------------=  //
	//  =-=   SDL_Surfaces, SDL_Rect e SDL_Textures   =-=  //


	SDL_Surface* background_Surface = NULL; // Contém a imagem do background.bmp
	SDL_Texture* background_Texture = NULL; // Contém a imagem do background.bmp

	SDL_Surface* detetive_Surface = NULL; // Contém os sprites do detetive
	SDL_Texture* detetive_Texture = NULL; // Contém os sprites do detetive
	SDL_Rect detetive_Rect;
	detetive_Rect.x = (window_Width / 2) - (detetive_Width / 2);
	detetive_Rect.y = (window_Height / 2) - (detetive_Height / 2);
	detetive_Rect.w = detetive_Width;
	detetive_Rect.h = detetive_Height;


	enum Key_Press
	{
		KEY_PRESS_DEFAULT, // 0
		KEY_PRESS_UP,      // 1
		KEY_PRESS_LEFT,    // 2
		KEY_PRESSS_DOWN,   // 3
		KEY_PRESS_RIGHT,   // 4
		KEY_PRESS_TOTAL    // 5
	};

	//  =-= =-= =-=   Fim das Variáveis   =-= =-= =-=  //
	//  =------------------------------------------=  //
	//  =-= =-= =-=   Começo do códico   =-= =-= =-=  //

	// Preenchimento e blit do background
	// background_Surface = load_image("Imagens/background.bmp", main_Surface);  // RETIRAR
	// SDL_BlitScaled(background_Surface, NULL, main_Surface, &main_Rect);       // RETIRAR

	// Preenchimento e renderização do background
	background_Texture = load_texture("Imagens/background.bmp", window_Renderer);
	SDL_RenderCopy(window_Renderer, background_Texture, NULL, NULL);

	// Atualiza e mostra a main_Window
	// SDL_UpdateWindowSurface(main_Window);  // RETIRAR
	// SDL_ShowWindow(main_Window);           // RETIRAR

	// Atualiza e mostra a main_Window
	SDL_RenderPresent(window_Renderer);

	// Loop principal do jogo (Importante: apenas no inicio ele atualiza a main_Window)
	while (game_loop)
	{
		SDL_RenderPresent(window_Renderer);
		// SDL_UpdateWindowSurface(main_Window); // Retirar

		// Loop que trata os eventos
		while (SDL_PollEvent( &event ) != 0) // enquanto existir evento o loop continua
		{
			// Evento: fechar main_Window
			if ( event.type == SDL_QUIT )
			{
				game_loop = false;
			}
			// Evento: Pressionar uma tecla qualquer no teclado
			else if ( event.type == SDL_KEYDOWN )
			{
				//Switch das teclas que fazem algo ao serem pressionadas
				switch (event.key.keysym.sym)
				{
				case SDLK_w:
					// switch dos sprites (OBSERVAÇÃO: do jeito q ta tem 2 problemas)
					// 1- A variável sprite não reseta pra 1 quando muda de direção
					// 2- O movimento tera que ser sincronizado em 2 frames, ou seja, 1 passo no jogo tem q ter 2 frames
					switch (sprite)
					{
					case 1:
						detetive_Texture = load_texture("Imagens/detetive costa 1.bmp", window_Renderer);

						sprite += 1;
						break;

					case 2:
						detetive_Texture = load_texture("Imagens/detetive costa 2.bmp", window_Renderer);

						sprite += 1;
						break;
					case 3:
						detetive_Texture = load_texture("Imagens/detetive costa 3.bmp", window_Renderer);

						sprite += 1;
						break;
					case 4:
						detetive_Texture = load_texture("Imagens/detetive costa 4.bmp", window_Renderer);

						sprite = 1;
						break;
					}// Fim do switch da tecla SDLK_w

					detetive_Rect.y -= detetive_Height;

					break;

				case SDLK_a:
					switch (sprite)
					{
					case 1:
						detetive_Texture = load_texture("Imagens/detetive lado esquerdo 1.bmp", window_Renderer);

						sprite += 1;
						break;

					case 2:
						detetive_Texture = load_texture("Imagens/detetive lado esquerdo 2.bmp", window_Renderer);

						sprite += 1;
						break;
					case 3:
						detetive_Texture = load_texture("Imagens/detetive lado esquerdo 3.bmp", window_Renderer);

						sprite += 1;
						break;
					case 4:
						detetive_Texture = load_texture("Imagens/detetive lado esquerdo 4.bmp", window_Renderer);

						sprite = 1;
						break;
					}// Fim do switch da tecla SDLK_a

					detetive_Rect.x -= detetive_Width;

					break;

				case SDLK_s:
					switch (sprite)
					{
					case 1:
						detetive_Texture = load_texture("Imagens/detetive frente 1.bmp", window_Renderer);

						sprite += 1;
						break;

					case 2:
						detetive_Texture = load_texture("Imagens/detetive frente 2.bmp", window_Renderer);

						sprite += 1;
						break;
					case 3:
						detetive_Texture = load_texture("Imagens/detetive frente 3.bmp", window_Renderer);

						sprite += 1;
						break;
					case 4:
						detetive_Texture = load_texture("Imagens/detetive frente 4.bmp", window_Renderer);

						sprite = 1;
						break;
					}// Fim do switch da tecla SDLK_s

					detetive_Rect.y += detetive_Height;

					break;

				case SDLK_d:
					switch (sprite)
					{
					case 1:
						detetive_Texture = load_texture("Imagens/detetive lado direito 1.bmp", window_Renderer);

						sprite += 1;
						break;

					case 2:
						detetive_Texture = load_texture("Imagens/detetive lado direito 2.bmp", window_Renderer);

						sprite += 1;
						break;
					case 3:
						detetive_Texture = load_texture("Imagens/detetive lado direito 3.bmp", window_Renderer);

						sprite += 1;
						break;
					case 4:
						detetive_Texture = load_texture("Imagens/detetive lado direito 4.bmp", window_Renderer);

						sprite = 1;
						break;
					} // Fim do switch da tecla SDLK_d

					detetive_Rect.x += detetive_Width;

					break;

				case SDLK_ESCAPE:
 					game_loop = false;

					break;

				case SDLK_e:
					// Códico do bloco de notas aki

					break;

				} // Fim do switch das teclas
				
			} // Fim dos evento de teclado

		} // Fim do loop de tratamento de eventos

		// SDL_BlitScaled(background_Surface, NULL, main_Surface, &main_Rect); // Recoloca o background para retirar a imagem do detetive // RETIRAR
		// SDL_BlitScaled(detetive_Surface, NULL, main_Surface, &detetive_Rect); // Coloca (blit) a imagem do detetive na main_Window     // RETIRAR
	
		SDL_RenderClear(window_Renderer); // Limpa a tela colocando a cor definida na função SDL_SetRenderDrawColor()
		SDL_RenderCopy(window_Renderer, detetive_Texture, NULL, NULL); // Recoloca o background para retirar a imagem do detetive
		SDL_RenderCopy(window_Renderer, detetive_Texture, NULL, &detetive_Rect); // Coloca (render) a imagem do detetive na main_Window

	} // Fim do while(game_loop)


	// Finalização do SDL
	SDL_DestroyRenderer(window_Renderer);
	SDL_DestroyWindow(main_Window);
	quit(); // Função que chama todas as funções quit (escrita no topo desse códico)

	return 0;
} // Fim do Main


